# =========================
# Logging
# =========================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =========================
# Proxy Settings
# =========================
HTTP_PROXY=http://your-proxy-host:port
HTTPS_PROXY=http://your-proxy-host:port
DISABLE_PROXY=false

# =========================
# Database
# =========================
BACKEND_DB_URL=postgresql://username:password@localhost:5432/database_name

# =========================
# GitHub OAuth Settings
# =========================
AUTH_PROVIDER=github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8001/api/v1/auth/github/callback
GITHUB_AUTHORIZATION_URL=https://github.com/login/oauth/authorize
GITHUB_TOKEN_URL=https://github.com/login/oauth/access_token
GITHUB_USER_API_URL=https://api.github.com/user
GITHUB_SCOPES=read:user user:email read:org
GITHUB_ADMIN_USERNAMES=your-github-admin-username
GITHUB_ADMIN_ORGS=your-github-admin-org

# =========================
# Azure OAuth Settings
# =========================
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_REDIRECT_URI=http://localhost:8001/api/v1/auth/azure/callback
AZURE_SCOPES=openid profile email offline_access
AZURE_ADMIN_USERNAMES=your-azure-admin-email
AZURE_ADMIN_GROUPS=your-azure-admin-group
AZURE_ADMIN_DOMAINS=
AZURE_ADMIN_ROLE_IDS=your-azure-admin-role-id
AZURE_OAUTH2_REDIRECT_URI=http://localhost:8001/api/v1/auth/oauth2/callback
AZURE_OAUTH2_SCOPES=https://graph.microsoft.com/User.Read https://graph.microsoft.com/GroupMember.Read.All

# =========================
# Google OAuth Settings
# =========================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8001/api/v1/auth/google/callback
GOOGLE_SCOPES=openid profile email
GOOGLE_ADMIN_EMAILS=your-google-admin-email
GOOGLE_ADMIN_DOMAINS=
GOOGLE_OAUTH2_REDIRECT_URI=http://localhost:8001/api/v1/auth/oauth2/callback
GOOGLE_OAUTH2_SCOPES=https://www.googleapis.com/auth/userinfo.profile https://www.googleapis.com/auth/userinfo.email

# =========================
# Auth0 OAuth2/OIDC Settings
# =========================
AUTH0_DOMAIN=your-auth0-domain
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_REDIRECT_URI=http://localhost:8001/api/v1/auth/auth0/callback
AUTH0_SCOPES=openid profile email offline_access
AUTH0_OAUTH2_REDIRECT_URI=http://localhost:8001/api/v1/auth/oauth2/callback
AUTH0_OAUTH2_SCOPES=profile email
AUTH0_AUDIENCE=https://oauth2andoidc
AUTH0_ADMIN_EMAILS=your-auth0-admin-email
