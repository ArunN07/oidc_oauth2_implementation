# =========================
# Application Settings
# =========================
APP_ENV=dev
APP_TITLE=OIDC OAuth2 Demo
APP_VERSION=1.0.0
API_PREFIX=/api/v1
DEBUG=true
SECRET_KEY=your-super-secret-key

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =========================
# Proxy Settings
# =========================
HTTP_PROXY=
HTTPS_PROXY=
DISABLE_PROXY=true

# =========================
# Auth Provider Switch (github | azure | google)
# =========================
AUTH_PROVIDER=github

# =========================
# GitHub OAuth Settings
# =========================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8001/api/v1/auth/github/callback
GITHUB_AUTHORIZATION_URL=https://github.com/login/oauth/authorize
GITHUB_TOKEN_URL=https://github.com/login/oauth/access_token
GITHUB_USER_API_URL=https://api.github.com/user
GITHUB_SCOPES=read:user user:email
GITHUB_ADMIN_USERNAMES=admin-username

# =========================
# Azure OAuth Settings
# =========================
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_REDIRECT_URI=http://localhost:8001/api/v1/auth/azure/callback
AZURE_SCOPES=openid profile email
AZURE_ADMIN_DOMAINS=

# =========================
# Google OAuth Settings
# =========================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8001/api/v1/auth/google/callback
GOOGLE_SCOPES=openid profile email

